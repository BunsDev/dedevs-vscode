{
  "name": "@dedevs/dedevs-vscode",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "preinstall": "./scripts/preinstall.sh",
    "postinstall": "./scripts/postinstall.sh",
    "dev": "yarn watch",
    "build": "./scripts/build.sh",
    "clean": "./scripts/clean.sh",
    "yalc": "yalc publish vscode-web && yalc add -D @dedevs/vscode-web",
    "build:vscode": "cd vscode-web && yarn build",
    "watch": "rm -rf dist && run-p watch:*",
    "watch-vscode": "cd vscode-web && yarn watch",
    "watch-with-vscode": "DEV_VSCODE=true run-p watch watch-vscode",
    "watch:dev-server": "webpack serve --mode=development",
    "watch:github1s-extension": "cd extensions/github1s && yarn dev",
    "webpack": "webpack --config webpack.config.js",
    "format": "prettier --write .",
    "eslint": "eslint --ext .ts --ext .js .",
    "test:ci": "start-test watch:dev-server 8080 test",
    "test": "cd tests && yarn && yarn jest"
  },
  "devDependencies": {
    "@dedevs/vscode-web": "0.0.1",
    "@cloudflare/workers-types": "^4.20240722.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "clean-css": "^5.3.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^50.6.1",
    "eslint-plugin-prettier": "^5.2.1",
    "file-loader": "^6.2.0",
    "generate-file-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "start-server-and-test": "^2.0.9",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.7.2",
    "uglify-js": "^3.17.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0",
    "yalc": "^1.0.0-pre.53"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json.css,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
